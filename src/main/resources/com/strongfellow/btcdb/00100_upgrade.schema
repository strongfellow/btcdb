BEGIN TRANSACTION;
CREATE TABLE IF NOT EXISTS `blocks`(
  `id` INTEGER PRIMARY KEY,
  `hash` BLOB UNIQUE NOT NULL,
  `size` INTEGER,
  `version` INTEGER,
  `previous` BLOB,
  `merkle` BLOB,
  `timestamp` INTEGER,
  `bits` INTEGER,
  `nonce` INTEGER,
  `tx_count` INTEGER
);
CREATE TABLE IF NOT EXISTS `block_chain`(
  `child_id` INTEGER NOT NULL PRIMARY KEY,
  `parent_id` INTEGER NOT NULL
);
COMMIT;
